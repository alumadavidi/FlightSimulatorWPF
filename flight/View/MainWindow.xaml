<Window x:Class="flight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:flight"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Grid.LayoutTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="0.7" ScaleY="1"/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.LayoutTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="600"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="900" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <local:Joystick HorizontalAlignment="Left" Height="100" Margin="200,199,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.471,1.761" Grid.Column="1">
            <local:Joystick.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.6"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="1.45" Y="-63.05"/>
                </TransformGroup>
            </local:Joystick.RenderTransform>
        </local:Joystick>
        <local:slider1 x:Name="Aileron" Tag="Aileron"  HorizontalAlignment="Left" Height="100" Margin="289,340,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <local:slider1.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </local:slider1.RenderTransform>
        </local:slider1>
        <local:slider1 x:Name="Throttle" Tag="Throttle" HorizontalAlignment="Left" Height="100" Margin="289,415,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <local:slider1.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </local:slider1.RenderTransform>
        </local:slider1>
        <local:Map  HorizontalAlignment="Center" Height="279" Margin="0,153,0,0" VerticalAlignment="Top" Width="332" Loaded="Map_Loaded" Foreground="{x:Null}" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Top">
            <local:Map.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="2.95" ScaleY="1.9"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="0" Y="0"/>
                </TransformGroup>
            </local:Map.RenderTransform>
        </local:Map>
        <ProgressBar Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="279,46,0,0" VerticalAlignment="Top" Width="158"
                     Value="{Binding VM_Efrat}">
        </ProgressBar>

    </Grid>

</Window>
